{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "outDir": "./dist",
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strict": false,
    "noEmit": true,
    "allowJs": true,
    "checkJs": false
  },
  "include": ["src", "__tests__", "__fixtures__"],
  "exclude": ["coverage", "dist", "node_modules"]
}
