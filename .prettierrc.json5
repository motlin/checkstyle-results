{
  // See: https://prettier.io/docs/en/configuration

  // Line length where Prettier will try to wrap
  // Default: 80
  printWidth: 120,

  // Number of spaces per indentation level
  // Default: 2
  tabWidth: 2,

  // Indent with tabs instead of spaces
  // Default: false
  useTabs: false,

  // Add semicolons at the end of statements
  // Default: true
  semi: true,

  // Use single quotes instead of double quotes
  // Default: false
  singleQuote: false,

  // Change when properties in objects are quoted
  // Default: "as-needed"
  // Options: "as-needed" | "consistent" | "preserve"
  quoteProps: "as-needed",

  // Use single quotes in JSX
  // Default: false
  jsxSingleQuote: false,

  // Print trailing commas wherever possible in multi-line comma-separated structures
  // Default: "es5"
  // Options: "none" | "es5" | "all"
  trailingComma: "all",

  // Print spaces between brackets in object literals
  // Default: true
  bracketSpacing: true,

  // Put the > of a multi-line JSX element at the end of the last line
  // Default: false
  bracketSameLine: false,

  // Include parentheses around a sole arrow function parameter
  // Default: "always"
  // Options: "avoid" | "always"
  arrowParens: "always",

  // How to wrap prose in markdown
  // Default: "preserve"
  // Options: "always" | "never" | "preserve"
  proseWrap: "preserve",

  // How to handle whitespace in HTML
  // Default: "css"
  // Options: "css" | "strict" | "ignore"
  htmlWhitespaceSensitivity: "css",

  // Line ending style
  // Default: "lf"
  // Options: "lf" | "crlf" | "cr" | "auto"
  endOfLine: "lf",
}
